<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".ForgotPasswordActivity" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvForgotPassword"
        android:text="@string/forgot_password"
        android:textAlignment="center"
        android:textSize="@dimen/layout_margin_30sp"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/layout_margin_80dp"
        />

   <EditText
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/etEnterEmail"
       android:hint="@string/enter_email"
       android:textColorHint="@color/black"
       android:paddingLeft="@dimen/layout_margin_10dp"
       android:layout_marginTop="@dimen/layout_margin_30dp"

       />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etPhonenumber"
        android:hint="@string/enter_phone_number"
        android:paddingLeft="@dimen/layout_margin_10dp"
        android:layout_marginTop="@dimen/layout_margin_10dp"
        android:textColorHint="@color/black"


        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="158dp"
        android:text=""
        android:layout_marginTop="@dimen/layout_margin_30dp"
        />



</LinearLayout>